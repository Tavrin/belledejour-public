	<section>
		<h2>Offres</h2>
		<section id="slideroffres">

			<div class="tab">
				<button class="tablinks active" onclick="Offres(event, 'manucure')">manucure</button>
				<button id="boutonsoin" class="tablinks" onclick="Offres(event, 'soins')">soins</button>
				<button class="tablinks" onclick="Offres(event, 'epilation')">epilation</button>

			</div>

			{% for key, categorie in prestations %}
							 {% if key == 'Manucure' %}
