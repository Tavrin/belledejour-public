									<li>{{prestation.name}} <p>{{prestation.price}}</p></li>
								{% endfor %}
								</ul>
								</article>
								{% endif %}
							{% if key == 'Soins' %}
							<article id="soins" class="tabcontent">
									<ul class=colonne1>
									{% for prestation in categorie %}
										<li>{{prestation.name}} <p>{{prestation.price}}</p></li>
									{% endfor %}
								</ul>
								</article>
								{% endif %}
							{% if key == 'Epilation' %}
								<article id="epilation" class="tabcontent">
								<ul class=colonne1>
								{% for prestation in categorie %}
									<li>{{prestation.name}} <p>{{prestation.price}}</p></li>
									{% endfor %}
									</ul>
								</article>
								{% endif %}
						{% endfor %}
		</section>
	</section>
	{% for key, categorie in prestations %}
	{% if key == 'Manucure' %}
	   <article id="manucure-responsive">
			<h1>manucure</h1>
	   <ul>
	   {% for prestation in categorie %}
		   <li>{{prestation.name}} <p>{{prestation.price}}€</p></li>
